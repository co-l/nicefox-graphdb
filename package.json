{
  "name": "nicefox-graphdb",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "[ -d .git ] && cp hooks/pre-commit .git/hooks/ && chmod +x .git/hooks/pre-commit || true",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "pnpm --filter nicefox-graphdb-server dev",
    "build": "pnpm -r build",
    "tck": "npx tsx packages/server/test/tck/run-test.ts",
    "publish:npm": "pnpm --filter nicefox-graphdb run build && (cd packages/nicefox-graphdb && npm publish --access public)",
    "publish:npm:dry": "pnpm --filter nicefox-graphdb run build && (cd packages/nicefox-graphdb && npm pack --dry-run)"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
}
